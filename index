<script>
    // Initialize Chart 1
    var chart1 = echarts.init(document.getElementById('chart1'));
    var option1 = {
        title: {
            text: 'Chart 1 Title'
        },
        tooltip: {},
        xAxis: {
            data: ['Category A', 'Category B', 'Category C', 'Category D']
        },
        yAxis: {},
        series: [{
            name: 'Value',
            type: 'bar',
            data: [5, 20, 36, 10]
        }]
    };
    chart1.setOption(option1);

    // Initialize Chart 2
    var chart2 = echarts.init(document.getElementById('chart2'));
    var option2 = {
        title: {
            text: 'Chart 2 Title'
        },
        tooltip: {},
        xAxis: {
            type: 'category',
            data: ['Jan', 'Feb', 'Mar', 'Apr']
        },
        yAxis: {
            type: 'value'
        },
        series: [{
            name: 'Sales',
            type: 'line',
            data: [150, 230, 224, 218]
        }]
    };
    chart2.setOption(option2);
</script>

